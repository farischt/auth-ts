{
  "name": "authentication-system",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "db:clean": "sequelize db:migrate:undo:all && sequelize db:seed:undo:all",
    "db:update": "sequelize db:migrate",
    "db:fill": "sequelize db:seed",
    "dev": "yarn db:update && next dev",
    "build": "next build",
    "start": "yarn db:update && next start",
    "lint": "next lint",
    "prettier:apply": "prettier --write .",
    "prettier:check": "prettier --check .",
    "check:eslint": "yarn tsc --noEmit && yarn eslint . && yarn prettier --write .",
    "check:next": "yarn tsc --noEmit && yarn lint && yarn prettier --write ."
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cookie": "^0.4.2",
    "formidable": "^2.0.1",
    "next": "latest",
    "pg": "^8.7.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sequelize": "^6.15.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cookie": "^0.4.1",
    "@types/formidable": "^2.0.4",
    "@types/node": "17.0.4",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "autoprefixer": "^10.4.0",
    "eslint": "8.8.0",
    "eslint-config-next": "12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.1",
    "sequelize-cli": "^6.4.1",
    "tailwindcss": "^3.0.7",
    "typescript": "4.5.4"
  }
}
